<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>

	<appSettings>
		<!-- LittleHotelier API Settings -->
		<add key="LittleHotelierApiKey" value="" />
		<add key="PropertyId" value="redinncourt" />
		<add key="ApiBaseUrl" value="http://apac.littlehotelier.com/api/v1/" />

		<!-- Twilio WhatsApp Settings (REPLACE WhatsApp Business API Settings) -->
		<add key="TwilioAccountSid" value="" />
		<add key="TwilioAuthToken" value="" />
		<add key="TwilioFromNumber" value="whatsapp:+14155238886" />
		<add key="NotificationRecipient" value="whatsapp:+60124238910" />

		<!-- Application Settings -->
		<add key="CheckIntervalMinutes" value="60" />

		<!--  DISCOUNT LOGIC  -->
		<!-- dorm thresholds (%) must ascend; discounts (%) must descend -->
		<add key="ThresholdsDorm"      value="60,80,90"   />
		<add key="DiscountsDorm"       value="15,10,5,0"  />

		<add key="ThresholdsPrivate"   value="60,80,90"   />
		<add key="DiscountsPrivate"    value="15,10,5,0"  />

		<add key="ThresholdsEnsuite"   value="60,80,90"   />
		<add key="DiscountsEnsuite"    value="15,10,5,0"  />

		<add key="ThresholdsTwin"      value="60,80,90"   />
		<add key="DiscountsTwin"       value="15,10,5,0"  />

	</appSettings>



	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<dependentAssembly>
				<assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-13.0.0.0" newVersion="13.0.0.0" />
			</dependentAssembly>
		</assemblyBinding>
	</runtime>
</configuration>
