<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>

	<appSettings>
		<!-- LittleHotelier API Settings -->
		<add key="LittleHotelierApiKey" value="" />
		<add key="PropertyId" value="redinncourt" />
		<add key="ApiBaseUrl" value="http://apac.littlehotelier.com/api/v1/" />

		<!-- Twilio WhatsApp Settings (REPLACE WhatsApp Business API Settings) -->
		<add key="TwilioAccountSid" value="" />
		<add key="TwilioAuthToken" value="" />
		<add key="TwilioFromNumber" value="whatsapp:+14155238886" />
		<add key="NotificationRecipient" value="whatsapp:+60124238910" />

		<!-- Application Settings -->
		<add key="CheckIntervalMinutes" value="60" />

		<!--  RATE LOGIC (replaces discount logic) -->
		<!-- Occupancy thresholds (%) must ascend; rates (RM) correspond to threshold ranges -->
		<add key="ThresholdsDorm"      value="60,80,90"   />
		<add key="RatesDorm"           value="42,46,50,54"  />

		<add key="ThresholdsPrivate"   value="30,60"   />
		<add key="RatesPrivate"        value="108,112,116"  />

		<add key="ThresholdsEnsuite"   value="50"   />
		<add key="RatesEnsuite"        value="130,150"  />

		<add key="ThresholdsTwin"      value=""   />
		<add key="RatesTwin"           value="89"  />

		<!-- Room capacity adjustments for temporary closures -->
		<add key="TemporaryClosedDormBeds" value="2" />
		<add key="TemporaryClosedPrivateRooms" value="0" />
		<add key="TemporaryClosedEnsuiteRooms" value="0" />
		<add key="TemporaryClosedTwinRooms" value="0" />

	</appSettings>



	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<dependentAssembly>
				<assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-13.0.0.0" newVersion="13.0.0.0" />
			</dependentAssembly>
		</assemblyBinding>
	</runtime>
</configuration>
